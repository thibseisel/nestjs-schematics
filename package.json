{
  "name": "@tseisel/nestjs-schematics",
  "version": "0.2.2",
  "description": "Generates a better NestJS project template.",
  "author": "Thibault Seisel",
  "license": "MIT",
  "keywords": [
    "nestjs",
    "schematics"
  ],
  "files": [
    "src/**/*",
    "!src/**/*.ts",
    "src/**/*.d.ts",
    "!src/**/*.spec.*",
    "src/**/files/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "schematics": "./src/collection.json",
  "scripts": {
    "build": "tsc -b tsconfig.json",
    "clean": "tsc -b tsconfig.json --clean",
    "test": "npm run build && jasmine src/**/*.spec.js",
    "prepublishOnly": "npm run clean && npm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "@angular-devkit/core": "^17.3.0",
    "@angular-devkit/schematics": "^17.3.0"
  },
  "devDependencies": {
    "@angular-devkit/schematics-cli": "^17.3.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.13.0",
    "husky": "^9.0.10",
    "jasmine": "^5.1.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "typescript": "~5.4.0"
  },
  "engines": {
    "node": ">=18.19"
  }
}
